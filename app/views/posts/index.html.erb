<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= turbo_stream_from 'posts' %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="posts" is="turbo-frame">
      <%= render @posts %>
  </tbody>
</table>

<br>

<%= render 'form', post: Post.new %>
